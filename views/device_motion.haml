!!!
%html
  %head
    %title Device Motion
    %link(href="/assets/application.css"   rel="stylesheet" type="text/css" media="screen")
    %link(href="/assets/device_motion.css" rel="stylesheet" type="text/css" media="screen")
  %body
    #acce_panel.panel
      %h1 Device Motion
      .no
        %p Don't support acce
      .yes
        %p
          %label last update time
          %span#acce_update_time -
        .function_panel
          %h2 Update interval
          %p#acce_update_interval -
        .function_panel
          %h2 Acceleration Including Gravity
          %div
            %label x
            %span#acce_acceleration_including_gravity_x -
            .counter
              #acce_acceleration_including_gravity_x_counter
          %div
            %label y
            %span#acce_acceleration_including_gravity_y -
            .counter
              #acce_acceleration_including_gravity_y_counter
          %div
            %label z
            %span#acce_acceleration_including_gravity_z -
            .counter
              #acce_acceleration_including_gravity_z_counter
        .function_panel
          %h2 Acceleration
          %div
            %label x
            %span#acce_acceleration_x -
            .counter
              #acce_acceleration_x_counter
          %div
            %label y
            %span#acce_acceleration_y -
            .counter
              #acce_acceleration_y_counter
          %div
            %label z
            %span#acce_acceleration_z -
            .counter
              #acce_acceleration_z_counter
        .function_panel
          %h2 Rotation rate
          %div
            %label alpha
            %span#acce_rotation_alpha -
            .counter
              #acce_rotation_alpha_counter
          %div
            %label beta
            %span#acce_rotation_beta -
            .counter
              #acce_rotation_beta_counter
          %div
            %label gamma
            %span#acce_rotation_gamma -
            .counter
              #acce_rotation_gamma_counter
    #orientation_panel.panel
      %h1 Device Orientation
      .no
        %p Don't support Orientation
      .yes
        %p
          %label last update time
          %span#device_orientation_update_time -
        .function_panel
          %h2 DeviceOrientation
          %div
            %label alpha
            %span#device_orientation_alpha -
            .counter
              #device_orientation_alpha_counter
          %div
            %label beta
            %span#device_orientation_beta -
            .counter
              #device_orientation_beta_counter
          %div
            %label gamma
            %span#device_orientation_gamma -
            .counter
              #device_orientation_gamma_counter
          %div
            %label absolute
            %span#device_orientation_absolute -
        .function_panel
          %h2 window.Orientation
          %p
            %label window.orientation
            %span#window_orientation -
    #moz_orientation_panel.panel
      %h1 Moz Device Orientation
      .no
        %p Don't support MozOrientation
      .yes
        %p
          %label last update time
          %span#moz_orientation_update_time -
        .function_panel
          %h2 MozDeviceOrientation
          %p
            %label x
            %span#moz_orientation_x -
          %p
            %label y
            %span#moz_orientation_y -
          %p
            %label z
            %span#moz_orientation_z -
    %script(type="text/javascript" src="/assets/device_motion.js")